<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin | Students Attendance Management System</title>
  <script src="https://kit.fontawesome.com/f6549854b5.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
  <link rel="icon" type="image/x-icon" href="/images/logo.ico">
  <link rel="stylesheet" href="/stylesheets/adminpage.css">
</head>

<body>
  <!-- HEADER -->
  <header class="header">
    <div class="logo">
      <img src="/images/logo.jpg">
      <h2><span>Students Attendance Management System - </span>SAMS</h2>
    </div>
    <nav class="navbar">
      <a href="/landing/home">Logout<i class="fa-solid fa-arrow-right-from-bracket"></i></i></a>
    </nav>
  </header>
  <!-- HEADER -->

  <section class="adminpage">
    <div class="adminpage-container">
      <h1 class="admin-welcome">Welcome Admin</h1>
      <div class="admin-action">
        <a href="teachers">
          <div class="admin-action-card">
            <div class="card-title">
              <h3>Teacher Management</h3>
            </div>
            <div class="card-content">
              <i class="fa-solid fa-chalkboard-user"></i>
              <div class="card-count"> <%= data7 %> </div>
            </div>
          </div>
        </a>
        <a href="students">
          <div class="admin-action-card">
            <div class="card-title">
              <h3>Student Management</h3>
            </div>
            <div class="card-content">
              <i class="fa-solid fa-user-graduate"></i>
              <div class="card-count"> <%= data8 %></div>
            </div>
          </div>
        </a>
        <a href="attendanceinfo">
          <div class="admin-action-card">
            <div class="card-title">
              <h3>Attendance Details</h3>
            </div>
            <div class="card-content">
              <i class="fa-solid fa-file-lines"></i>
            </div>
          </div>
        </a>
        <a href="issuenotice">
          <div class="admin-action-card">
            <div class="card-title">
              <h3>Issue<br>Notice</h3>
            </div>
            <div class="card-content">
              <i class="fa-solid fa-bullhorn"></i>
            </div>
          </div>
        </a>
      </div>
    </div>

  </section>

  <script src="/javascripts/adminpage.js"></script>
</body>

</html>